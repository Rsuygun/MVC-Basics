@model Candidate

<div class="display-6">
    Apply
</div>

<form method="post" action="/course/apply">
    <div class="form-group my-2">
        <label>Email</label>
        <input name="Email" class="form-control">
    </div>
    <div class="form-group my-2">
        <label>First Name</label>
        <input name="FirstName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label>Last Name</label>
        <input name="LastName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label>Age</label>
        <select name="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input type="radio" name="SelectedCourse" id="mvc" value="ASP.NET Core MVC">
            <label>ASP.NET Core MVC</label>
        </p>
        <p>
            <input type="radio" name="SelectedCourse" id="api" value="ASP.NET Core API">
            <label>ASP.NET Core API</label>
        </p>
        <p>
            <input type="radio" name="SelectedCourse" id="blazor" value="Blazor">
            <label>Blazor</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" href="/">Home</a>
    </div>
</form>